<%- include('header') %>
            
            <section class="d-flex justify-content-center" style="color: rgb(255, 255, 255); background-color: rgb(31, 31, 31); border-radius: 25px;">
                <div class="container" style="margin: 50px;">
                    <div class="row" style="display: flex; justify-content: center; flex-wrap: wrap;">
                        <div class="col-3">
                            <div class="t"><img src="/ảnh/<%= list[0].image%>" alt="" height="500" width="300"></div>
                        </div>
                        <div class="col-8 tt" style="margin-left: 20px;">
                            <h4><%= list[0].tenphim %></h4>
                            <div style="height: 10px; border-bottom: 1px solid rgb(161, 161, 161);"></div>
                            <p>
                                <b>Đạo diễn: </b><%= list[0].daodien %> <br>
                                <b>Thể loại: </b><%= list[0].theloai %> <br>
                                <b>Nội dung: </b><%= list[0].noidung.substr(0,70) %> <br>
                            </p>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <form action="/api/menu/items/ngaychieu/<%= list[0].idphim %>" method="get" class="row d-flex justify-content-center">
                            <button class="btn btn-secondary" style="width: 100px;">Mua vé</button>
                        </form >
                    </div>
                </div>
            </section>

            <div class="row" style="height: 100px;"></div>
            <div class="row" style="height: 100px; border-top: 2px solid rgb(31, 31, 31);"></div>

            <%- include('footer') %>