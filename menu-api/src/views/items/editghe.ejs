
<%- include('header') %>
<!-- Page Content -->
<div id="page-content-wrapper">
    <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
            <h2 class="fs-2 m-0">Sửa ghế</h2>
        </div>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <i class="fas fa-user me-2"></i>Admin
            </ul>
        </div>
    </nav>

    <div class="container-fluid px-4">
        <div class="row my-5">
            <div class="col">
                <form action="/api/menu/items/updateghe/<%= list[0].idghe %>?_method=PUT" method="POST">
                    <label for="">Tên ghế</label>
                    <input type="text" name="tenghe" value="<%= list[0].tenghe %>" class="form-control">
                    <label for="">Phòng</label>
                    <select name="idphong" class="form-select">
                        <% for (let i=0; i<list2.length; i++) { %>
                            <% if(list[0].idphong==list2[i].idphong) {%>

                            <option value="<%= list2[i].idphong %>" selected="selected"><%= list2[i].idphong %> - <%= list2[i].tenphong %></option>
                            <% }else{%>

                            <option value="<%= list2[i].idphong %>"><%= list2[i].idphong %> - <%= list2[i].tenphong %></option>
                            <%}%>

                            <% } %>
                    </select>
                    <label for="">Giá ghế</label>
                    <input type="text" name="giaghe" value="<%= list[0].giaghe %>" class="form-control">
                    <button type="submit" class="btn btn-primary">Sửa</button>
                </form>
                <% if (message != "null") { %>
                    <div class="alert alert-danger" role="alert">
                        Lỗi: <%= message %>
                      </div>
                    
                 <% } %>
            </div>
        </div>

    </div>
</div>
</div>


<!-- /#page-content-wrapper -->    
<%- include('footer') %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>

<script src="/js/app.js"></script>

</body>
</html>